# VM Management Service Environment Variables

# API Configuration
API_TITLE=VM Management Service
API_DESCRIPTION=FastAPI backend for VM management
API_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://vm_user:vm_password@localhost:5432/vm_service
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vm_service
DB_USER=vm_user
DB_PASSWORD=vm_password

# For SQLite testing (uncomment to use)
# DATABASE_URL=sqlite:///./vm_service.db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# VM Management Configuration
LIBVIRT_URI=qemu:///system
VM_STORAGE_PATH=/var/lib/libvirt/images

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*