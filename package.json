{
  "name": "rollo-monorepo",
  "version": "1.0.0",
  "description": "Rollo monorepo containing multiple applications and shared packages",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:rollo-site": "cd apps/rollo-site && npm start",
    "dev:sso": "cd apps/sso && npm run dev",
    "build:rollo-site": "cd apps/rollo-site && npm run build",
    "build:sso": "cd apps/sso && npm run build",
    "test:rollo-site": "cd apps/rollo-site && npm test",
    "test:sso": "cd apps/sso && npm test",
    "install:all": "npm install && npm run install:rollo-site && npm run install:sso",
    "install:rollo-site": "cd apps/rollo-site && npm install",
    "install:sso": "cd apps/sso && npm install",
    "build:all": "npm run build:rollo-site && npm run build:sso",
    "test:all": "npm run test:rollo-site && npm run test:sso",
    "dev": "npm run dev:rollo-site",
    "start": "npm run dev:rollo-site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darkstormgames/rollo_site.git"
  },
  "keywords": ["monorepo", "angular", "express", "sso", "website"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/darkstormgames/rollo_site/issues"
  },
  "homepage": "https://github.com/darkstormgames/rollo_site#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}